{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#context",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "registration": {
            "type": "string",
            "format": "uuid"
        },
        "instructor": {
            "oneOf": [
                {"$ref": "#agent"},
                {"$ref": "#group"}
            ]
        },
        "team": {
            "allOf": [{"$ref": "#group"}]
        },
        "contextActivities": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "parent": {"$ref": "#activity_list_or_obj"},
                "grouping": {"$ref": "#activity_list_or_obj"},
                "category": {"$ref": "#activity_list_or_obj"},
                "other": {"$ref": "#activity_list_or_obj"}
            }
        },
        "revision": {"type": "string"},
        "platform": {"type": "string"},
        "language": {
            "type": "string",
            "format": "langtag"
        },
        "statement": {"$ref": "#statementref"},
        "extensions": {"$ref": "#extensions"}
    }
}
