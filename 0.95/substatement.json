{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#substatement",
    "allOf": [{ "$ref": "#statement" }],
    "required": ["objectType"],
    "properties": {
        "objectType": { "enum": ["SubStatement"] },
        "object": {
            "not": {
                "properties": {
                    "objectType": { "enum": ["SubStatement"] }
                }
            }
        }
    },
    "patternProperties": {
        "^(id|stored|authority|voided)$": {
            "type": "null"
        }
    }
}
